{
  "manifest_version": 3,
  "name": "HistoryTabs",
  "version": "0.2.0",
  "description": "Alt+Kでコマンドパレット。履歴検索／⭐固定／/t でタブ検索。矢印キーとEnterで操作。",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Palette"
  },
  "commands": {
    "open-palette": {
      "suggested_key": {
        "default": "Alt+K",
        "mac": "Alt+K"
      },
      "description": "コマンドパレットを開く"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ui/palette.html",
        "ui/palette.css",
        "ui/palette.js",
        "icons/16.png",
        "icons/32.png",
        "icons/48.png",
        "icons/128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
