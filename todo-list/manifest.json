{
  "manifest_version": 3,
  "name": "Todo List Palette",
  "version": "1.0.0",
  "description": "Alt+L ですぐ開ける TODO パレット。Alt キーと矢印で完了・削除・復活を操作できる拡張機能。",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Todo List"
  },
  "commands": {
    "open-palette": {
      "suggested_key": {
        "default": "Alt+K",
        "mac": "Alt+K"
      },
      "description": "タブ履歴パレットを開く"
    },
    "open-todo-list": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Alt+L"
      },
      "description": "TODO リストを開く"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "cs/content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/palette.html",
        "ui/palette.css",
        "ui/palette.js",
        "icons/16.png",
        "icons/32.png",
        "icons/48.png",
        "icons/128.png",
        "ui/todo.html",
        "ui/todo.css",
        "ui/todo.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
